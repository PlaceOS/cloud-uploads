{
    "name": "@placeos/cloud-uploads",
    "version": "0.1.0-dev",
    "description": "Signed direct to cloud uploads",
    "source": "src/index.ts",
    "main": "./dist/cloud-uploads.js",
    "module": "./dist/cloud-uploads.module.js",
    "unpkg": "./dist/cloud-uploads.umd.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "docs": "typedoc --excludePrivate --out docs --target es6 --theme minimal --mode file src",
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --runInBand",
        "lint": "tslint",
        "semantic-release": "semantic-release",
        "prepare": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PlaceOS/cloud-uploads.git"
    },
    "author": "Alex Sorafumo",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PlaceOS/cloud-uploads/issues"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "jsdom",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "collectCoverageFrom": [
            "src/**/*.{js,ts}"
        ]
    },
    "homepage": "https://github.com/PlaceOS/cloud-uploads#readme",
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "jest": "^27.3.1",
        "jest-config": "^27.3.1",
        "microbundle": "^0.14.1",
        "rxjs": "^6.6.7",
        "ts-jest": "^27.0.7",
        "ts-md5": "^1.2.9",
        "tslint": "^6.1.3",
        "typedoc": "^0.22.9",
        "typescript": "^4.4.4"
    },
    "peerDependencies": {
        "rxjs": "^6.6.7",
        "ts-md5": "^1.2.9"
    }
}
